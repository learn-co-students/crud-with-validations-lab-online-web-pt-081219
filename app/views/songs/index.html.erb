<h1 style="zoom: 150%; color: aqua; background-color: black;">Songs</h1>

<div style="background-color: black;"><%= link_to 'Create Song', new_song_path %></div>
<br />

<table border="1" style="color: yellow; background-color: black;">
<thead>
    <tr style="background-color: red;">
      <th>Title</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Artist name</th>
      <th>Links</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr style="background-color: green;">
        <td><%= song.title %></td>
        <td><%= song.release_year %></td>
        <td><%= song.genre %></td>
        <td><%= song.artist_name %></td>
        <td>
          <%= link_to 'View', song %> |
          <%= link_to 'Edit', edit_song_path(song) %> |
          <%= link_to 'Delete', song, method: :delete, data: { confirm: 'For real?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


